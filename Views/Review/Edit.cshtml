@{
  Layout = "_Layout";
}

@using TravelApiMVC.Models;
@model TravelApiMVC.Models.Review;

<h2>Edit Review</h2>

<h4>Edit this Review: @ViewBag.Destination.City</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.ReviewId)
    <div class="form-group">
        @Html.LabelFor(model => model.ReviewText)
        @Html.TextBoxFor(model => model.ReviewText, new { @class = "form-control", required = "required"})
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.user_name)
        @Html.TextBoxFor(model => model.user_name, new { @class = "form-control", required = "required"})
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Rating)
        @Html.TextBoxFor(model => model.Rating, new { @class = "form-control", required = "required"})
    </div>

    <input type="submit" value="Save" class="btn btn-outline-success my-2 my-sm-0"/>
}
<p>@Html.ActionLink("Back to Reviews", "Index")</p>